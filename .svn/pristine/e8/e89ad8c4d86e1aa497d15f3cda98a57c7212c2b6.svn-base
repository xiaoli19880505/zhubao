	public List<Group> findGroupsByUser(String userId) {
//		return getDbSqlSession().selectList("selectGroupsByUserId", userId);
		List<Group> list = Lists.newArrayList();
		Map<String,Object> conditionMap = new HashMap<String,Object>();
		UserInfo user = userInfoMapper.selectById(userId);//getSystemService().getUserByLoginName(userId);
		conditionMap.put("userid",userId);
		List<RoleInfo> roleList = roleInfoMapper.getRoleListByMap(conditionMap);
		if (user != null && roleList != null){
			for (RoleInfo role : roleList){
				list.add(ActConvertUtil.toActivitiGroup(role));
			}
		}
		return list;
	}

